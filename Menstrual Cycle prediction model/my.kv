<EnterPreviousDate>:
    date:date
    name: "EnterPreviousDate"
    
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        id:epd1
    
        Label:
            text:"Enter Previous Month Date e.g. 27-09-2019"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.3, "top":0.9}
            size_hint: 0.35, 0.15
                
        TextInput:
            id: date
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.2 , "top":0.7}
            size_hint: 0.6, 0.2

        Button:
            text: "Confirm"
            background_color : 0,1,1,1
            pos_hint:{"x":0.3,"y":0.2}
            size_hint: 0.4, 0.15
            font_size: (root.width**2 + root.height**2) / 13**4
            on_release:
                root.storeDate()


<AllOptions>:
    name:"AllOptions"

